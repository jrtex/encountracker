# Test Environment Configuration
NODE_ENV=test
PORT=3001

# PostgreSQL Test Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=encountracker_test
POSTGRES_USER=encountracker_test_user
POSTGRES_PASSWORD=test_password_only_for_testing

# JWT Configuration - Test Secrets
JWT_SECRET=test-secret-key-do-not-use-in-production
JWT_EXPIRES_IN=1h

# CORS Configuration
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=error

# Rate Limiting - Relaxed for tests
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10000
